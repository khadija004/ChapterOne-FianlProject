@model AutobiographyFour

@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="d-flex">
            <div class="mt-3">
                <img src="~/assets/images/about//@Model.LargeImage" style="width:250px;height:200px" />
            </div>

            <div class="mt-3">
                <img src="~/assets/images/about//@Model.SmallImage" style="width:250px;height:200px;margin-left:10px;" />
            </div>
        </div>
        

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Name</label>
            <input class="form-control" id="customFile" disabled asp-for="@Model.Name" />
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Title</label>
            <input class="form-control" id="customFile" disabled asp-for="@Model.Title" />
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Description</label>
            <input class="form-control" id="customFile" disabled asp-for="@Model.Description" />
        </div>


        <div class="buttons my-3">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>



















