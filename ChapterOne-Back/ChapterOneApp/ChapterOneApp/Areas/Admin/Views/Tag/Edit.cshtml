@model TagUpdateVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <h1>Edit</h1>

    <form class="form-sample" method="post" enctype="multipart/form-data">

        <label for="formFile" class="form-label my-2">Name</label>
        <input type="text mt-3" class="form-control" id="customFile" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>











