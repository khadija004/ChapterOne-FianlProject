@model List<Position>
@{
    ViewData["Title"] = "Author";
}

@section Css{
    <link href="~/admin/css/style.css" rel="stylesheet" />
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var position in Model)
                {
                    <tr data-id="@position.Id">
                        <td class="py-1">
                            @position.Name
                        </td>

                        <td>
                            <a asp-action="Detail" asp-route-id="@position.Id" data-toggle="tooltip" data-original-title="Detail">
                                <i class="fa-solid fa-circle-info" style="color: #dbd530;"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@position.Id" data-toggle="tooltip" data-original-title="Edit">
                                <i class="fa-solid fa-pen-to-square" style="color: #44ce42;"></i>
                            </a>
                            <a class="delete-position" data-toggle="tooltip" data-original-title="Remove">
                                <i class="fa-solid fa-trash" style="color: #da3e45;"></i>
                            </a>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/custom.js"></script>
}



