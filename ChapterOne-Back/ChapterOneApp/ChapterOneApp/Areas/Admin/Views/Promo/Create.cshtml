@model PromoCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Photos</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Price</label>
            <textarea class="form-control" id="category-text" asp-for="Price" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>


@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("category-text");
    </script>
}







