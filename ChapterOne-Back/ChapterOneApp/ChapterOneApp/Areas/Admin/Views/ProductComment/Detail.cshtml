@model ProductComment
@{
    ViewData["Title"] = "Detail";
}

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <form asp-action="Detail">
                    <div class="form-group ml-5 mt-3">
                        <label>Product Name</label>
                        <input disabled class="form-control" asp-for="Product.Name">
                    </div>
                    <div class="form-group ml-5 mt-3">
                        <label>User Name</label>
                        <input disabled class="form-control" asp-for="FullName">
                    </div>
                    <div class="form-group ml-5 mt-3">
                        <label>Email</label>
                        <input disabled class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group ml-5 mt-3">
                        <label>Message</label>
                        <input disabled class="form-control" asp-for="Message">
                    </div>
                    <a asp-action="Index" class="btn btn-success ml-5 mt-3" style="background-color:gray;border:none;"><i class="feather mr-2 icon-check-circle"></i>Go to list</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/admin/js/custom.js"></script>
}






