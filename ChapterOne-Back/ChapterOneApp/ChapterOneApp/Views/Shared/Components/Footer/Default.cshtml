@model FooterVM
<footer>
    <section id="footer">
        <div class="container footer-background-color">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="left1">
                        <h4>Publishers</h4>
                        <div class="story">
                            <p>Bestsellers</p>
                            <p>Interviews</p>
                            <p>Authors Story</p>
                            <p>Book Fairs</p>
                            <p>Help (FAQ)</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="left2">
                        <h4>Contact</h4>
                        <div class="story">
                            <p>Stay in touch with everything ChapterOne,</p>
                            <p>follow us on social media and learn about</p>
                            <p>new promotions.</p>
                            <div class="icons">
                                @foreach (var social in Model.Socials)
                                {
                                    <a href="@social.Link" target="_blank">
                                        <i class="@social.Image"></i>
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="left3">
                        <h4>News & Update</h4>
                        <div class="story">
                            <p>We’d love it if you subscribed to our</p>
                            <p>newsletter! You’ll love it too.</p>
                            <div class="email-input">
                                <input type="text" placeholder=" Email...">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="right">
                        <h4>Social media</h4>
                        <div class="story">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="images1">
                                    <img src="~/assets/images/home/footer-image-1.jpg" alt="">
                                    <img src="~/assets/images/home/footer-image-2.jpg" alt="">
                                    <img src="~/assets/images/home/footer-image-3.jpg" alt="">
                                </div>
                                <div class="images2">
                                    <img src="~/assets/images/home/footer-image-4.jpg" alt="">
                                    <img src="~/assets/images/home/footer-image-5.jpg" alt="">
                                    <img src="~/assets/images/home/footer-image-6.jpg" alt="">
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="btn">
                        <button id="topbtn"><i class="fa-solid fa-arrow-up" style="color: #8a8a8a;"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</footer>

