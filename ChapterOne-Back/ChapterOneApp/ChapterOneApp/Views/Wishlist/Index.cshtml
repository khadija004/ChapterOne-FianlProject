@model List<WishlistDetailVM>
@inject ILayoutService headerBackground
@{
    ViewData["Title"] = "Wishlist";
}



<!-- Main Area -->
<main>
    <section id="background">
        <div class="background-images" style="background-image:url(/assets/images/cart/cart-backgorund-image.jpg)">
            <h2>Wishlist</h2>
        </div>
    </section>
    <section id="wishlist-product">
        <div class="container">
            <div class="wishlist-products">
                @if (Model.Count > 0)
                {
                    <table class="table wishlist-table">
                        <thead>
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Setting</th>
                            </tr>

                        </thead>
                        <tbody class="wishlist-table-body">
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">

                                    <td>
                                        <img src="~/assets/images/shop/@item.Image" alt="" style="height:90px;">
                                    </td>
                                    <td>
                                        <span> <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@item.Id" style="color: currentColor;text-decoration:none;">@item.Name</a></span>
                                    </td>
                                    <td>
                                        <span>$</span><span>@item.Price.ToString("0.00")</span>
                                    </td>
                                    <td class="product_remove">
                                        <i class="fa-solid fa-trash-can delete-wishlist" style="cursor: pointer"></i>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="cantinue-btn d-flex justify-content-between ">
                        <a class="btn btn-primary shop" style="padding: 12px;background-color:rgb(172, 2, 2);border:none;border-radius:0;" asp-controller="Shop" asp-action="Index">Continue shopping</a>
                    </div>
                }

            </div>

            <div class="show-alert d-none">
                <div class="alert">
                    <button class="btn btn-danger btn-red">YOU HAVE NO ITEMS IN YOUR WISHLIST.</button>
                </div>
                <div class="button-shop">
                    <button class="btn btn-primary btn-orange">Continue shopping</button>
                </div>

            </div>


        </div>
    </section>
</main>
<!-- Main Area -->
